  <Style TargetType="{x:Type Label}" x:Key="CommonLabel">
    <Setter Property="Foreground" Value="White" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="FontSize" Value="36" />
    <Setter Property="FontWeight" Value="Normal" />
  </Style>

  <Style TargetType="{x:Type Label}" x:Key="CommonLabelPrimary">
    <Setter Property="Foreground" Value="{StaticResource primary}" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="FontSize" Value="36" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style TargetType="{x:Type TextBlock}" x:Key="CommonTextBlock">
    <Setter Property="Foreground" Value="{StaticResource primary}" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="TextWrapping" Value="Wrap" />
    <Setter Property="FontSize" Value="36" />
    <Setter Property="TextAlignment" Value="Justify" />
    <Setter Property="FontWeight" Value="Normal" />
  </Style>

  <Style TargetType="{x:Type ui:TextBorder}">
    <Setter Property="AutoFontRatio" Value="0.8" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="TextTrimming" Value="None" />
    <Setter Property="TextWrapping" Value="NoWrap" />
    <Setter Property="Foreground" Value="{StaticResource primary}" />
    <Setter Property="TextAlignment" Value="Center" />
    <Setter Property="AutoFontSize" Value="true" />
    <Setter Property="FontSize" Value="36" />
  </Style>

  <!-- Page -->
  <DataTemplate DataType="{x:Type local:PageIndexer}">
    <ItemsControl ItemsSource="{Binding Pages}" Margin="20,0,0,0">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <StackPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <Grid Width="50" Height="80">
            <Ellipse Width="40" Height="40" StrokeThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center">
              <Ellipse.Style>
                <Style TargetType="{x:Type Ellipse}">
                  <Setter Property="Stroke" Value="{StaticResource Gray500}" />
                  <Setter Property="Fill" Value="Transparent" />
                  <Style.Triggers>
                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                      <Setter Property="Stroke" Value="Red" />
                      <!--<Setter Property="Fill" Value="Yellow" />-->
                    </DataTrigger>
                  </Style.Triggers>
                </Style>
              </Ellipse.Style>
            </Ellipse>
            <Label Content="{Binding PageNo}" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontWeight="SemiBold">
              <Label.Style>
                <Style TargetType="{x:Type Label}">
                  <Setter Property="FontSize" Value="{Binding FontSize}" />
                  <Setter Property="Foreground" Value="{StaticResource Gray500}" />
                  <Style.Triggers>
                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                      <Setter Property="Foreground" Value="Red" />
                    </DataTrigger>
                  </Style.Triggers>
                </Style>
              </Label.Style>
            </Label>
          </Grid>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </DataTemplate>

  <!-- Message Popup -->

  <!-- Background="White" -->
  <DataTemplate DataType="{x:Type local:CallMessageVM}">
    <Border
              BorderBrush="#25539C" BorderThickness="3"
              IsHitTestVisible="False"
              CornerRadius="30" Background="White"
              HorizontalAlignment="Center" VerticalAlignment="Center">
      <!--<Border.Effect>
        <DropShadowEffect  ShadowDepth="13" Opacity="0.4" />
      </Border.Effect>-->

      <Border.Style>
        <Style TargetType="{x:Type Border}">
          <Setter Property="Width" Value="1008" />
          <Setter Property="Height" Value="520" />
          <Style.Triggers>
            <MultiDataTrigger>
              <MultiDataTrigger.Conditions>
                <Condition Binding="{Binding IsLandscape}" Value="True" />
                <Condition Binding="{Binding MinPopup}" Value="false" />
              </MultiDataTrigger.Conditions>
              <Setter Property="Width" Value="1096" />
              <Setter Property="Height" Value="560" />
            </MultiDataTrigger>
            <MultiDataTrigger>
              <MultiDataTrigger.Conditions>
                <Condition Binding="{Binding IsLandscape}" Value="True" />
                <Condition Binding="{Binding MinPopup}" Value="True" />
              </MultiDataTrigger.Conditions>
              <Setter Property="Width" Value="880" />
              <Setter Property="Height" Value="560" />
              <Setter Property="Margin" Value="0,80,40,0" />
            </MultiDataTrigger>
          </Style.Triggers>
        </Style>
      </Border.Style>

      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="50" />
          <RowDefinition Height="2*" />
          <RowDefinition Height="20" />
          <RowDefinition Height="1.5*" />
          <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
          <!--<Image Grid.Column="0" Source="{StaticResource PopupIcon}" Stretch="Uniform" />-->
          <Border VerticalAlignment="Center">
            <Label Style="{StaticResource CommonLabel}" FontSize="150"
                   Content="{Binding PopupPatientName}" />
          </Border>
          <Border VerticalAlignment="Center" Height="auto">
            <Label Style="{StaticResource CommonLabel}" FontSize="120"
                   Content="님" />
          </Border>
        </StackPanel>

        <Border Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                  Margin="60,0,60,0">
          <TextBlock Style="{StaticResource CommonTextBlock}"
                       FontSize="58"
                       Text="{Binding PopupMessage}" />
        </Border>
      </Grid>
    </Border>
  </DataTemplate>
</ResourceDictionary>