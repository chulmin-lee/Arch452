<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EUMC.Client">

  <DataTemplate DataType="{x:Type local:DownloadProgress}">
    <Grid Height="48">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="48" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <Grid Grid.Column="0" Background="LightGray" Margin="0,0,4,0">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center">
          <Label Content="{Binding No}" FontSize="14" Foreground="Black" FontWeight="Bold"  HorizontalAlignment="Center" />
        </Border>
      </Grid>

      <ProgressBar Grid.Column="1" Value="{Binding Percent}" Maximum="100" />
      <Border Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
        <Label Content="{Binding FileName}" FontSize="16" Foreground="White"  Margin="10,0,0,0" />
      </Border>
    </Grid>
  </DataTemplate>

  <DataTemplate DataType="{x:Type local:UpdaterContentVM}">
    <Grid DataContext="{Binding ITEM}">
      <Border HorizontalAlignment="Center" VerticalAlignment="Center"
              Width="{Binding CONFIG.ContentWidth}" Height="{Binding CONFIG.ContentHeight}" Padding="10" Background="LightGray">
        <Border BorderBrush="DarkGray" BorderThickness="0,0,2,2" Background="White" CornerRadius="5">
          <Grid Margin="20">
            <Grid.Background>
              <ImageBrush ImageSource="{StaticResource Updater}" Stretch="UniformToFill" Opacity="1.0" />
            </Grid.Background>
            <Grid.RowDefinitions>
              <RowDefinition Height="100" />
              <RowDefinition Height="60" />
              <RowDefinition Height="*" />
              <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <Label Grid.Row="1" Content="{Binding Title}"
                 Style="{StaticResource CommonLabel}" FontSize="40" Foreground="White" />

            <ItemsControl Grid.Row="2" ItemsSource="{Binding Items}" Margin="30">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <UniformGrid Rows="{Binding CONFIG.ItemRows}" Columns="1" />
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <ContentControl Content="{Binding}" />
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Grid Grid.Row="3" Margin="0,10,0,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
              </Grid.ColumnDefinitions>

              <TextBlock Grid.Column="0"
                       Text="네오비젼"
                       Style="{StaticResource CommonTextBlock}"
                       Foreground="White"
                       FontSize="16" Margin="25,0,0,0"
                       HorizontalAlignment="Left" />

              <TextBlock Grid.Column="1"
                       Text="{Binding Version, StringFormat='Version : {0}'}"
                       Style="{StaticResource CommonTextBlock}"
                       Foreground="White"
                       FontSize="16" Margin="0,0,25,0"
                       HorizontalAlignment="Right" />
            </Grid>
          </Grid>
        </Border>
      </Border>
    </Grid>
  </DataTemplate>
</ResourceDictionary>