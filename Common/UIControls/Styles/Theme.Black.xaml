<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">


  <!--
      // normal
      foreground/background
      fontsize, font

      // enabled

      // selection
      over/selected

  -->


  <SolidColorBrush x:Key="Client_Background" Color="#30353A"/>





  <!-- Window Background -->
  <SolidColorBrush x:Key="WindowBG.Active" Color="#FF30353A"/>
  <SolidColorBrush x:Key="WindowBG.Inactive" Color="#FF30353A"/>
  <!-- icon background color -->
  <SolidColorBrush x:Key="WindowFG.Text" Color="White"/>

  <!-- main -->
  <SolidColorBrush x:Key="Color.Black9" Color="#FF121212"/>
  <SolidColorBrush x:Key="Color.Black8" Color="#FF1E1E1E"/>
  <SolidColorBrush x:Key="Color.Black7" Color="#FF262626"/>
  <SolidColorBrush x:Key="Color.Black6" Color="#FF3B3B3B"/>
  <SolidColorBrush x:Key="Color.Black5" Color="#FF464646"/>
  <SolidColorBrush x:Key="Color.Black4" Color="#FF505050"/>

  <SolidColorBrush x:Key="Main.Background" Color="#FF262626"/>

  <!-- Button  -->
  <SolidColorBrush x:Key="ButtonFG.Normal" Color="White"/>
  <SolidColorBrush x:Key="ButtonFG.MouseOver" Color="LightBlue"/>
  <SolidColorBrush x:Key="ButtonFG.MousePress" Color="LightBlue"/>

  <LinearGradientBrush x:Key="ButtonBG.Normal" StartPoint="0.5,0" EndPoint="0.5,1">
    <GradientStop Color="#FF313941" Offset="0.5" />
    <GradientStop Color="#FF21262D" Offset="0.5" />
  </LinearGradientBrush>

  <LinearGradientBrush x:Key="ButtonBG.MouseOver" StartPoint="0.5,0" EndPoint="0.5,1">
    <GradientStop Color="#FF57616D" Offset="0.5" />
    <GradientStop Color="#FF353C47" Offset="0.5" />
  </LinearGradientBrush>

  <LinearGradientBrush x:Key="ButtonBG.MousePress" StartPoint="0.5,0" EndPoint="0.5,1">
    <GradientStop Color="#FFDCDCDC" Offset="0" />
    <GradientStop Color="LightGray" Offset="0.2" />
    <GradientStop Color="LightGray" Offset="0.8" />
    <GradientStop Color="#FFDCDCDC" Offset="1" />
  </LinearGradientBrush>

  <!-- ################################################################### -->
  <!-- Layout                                                              -->
  <!-- ################################################################### -->

  <!-- Item height -->
  <sys:Double      x:Key="Items.Row.Height">30</sys:Double>
  <sys:Double      x:Key="Items.Row.FontSize">13</sys:Double>
  <sys:Double      x:Key="Window.FontSize">13</sys:Double>

  <!-- chrome -->
  <sys:Double      x:Key="Chrome.Frame">1</sys:Double>
  <sys:Double      x:Key="Chrome.Resize">6</sys:Double>
  <sys:Double      x:Key="Chrome.CaptionHeight">4</sys:Double>

  <!-- margin -->
  <sys:Double      x:Key="Margin.Window1">10</sys:Double>
  <Thickness       x:Key="Window.Margin" Left="10" Right="10" Top="10" Bottom="10" />
  <Thickness       x:Key="Dialog.Margin" Left="5" Right="5" Top="5" Bottom="5" />


  <Color x:Key="Colors.Transparent" >#00000000</Color>
  <Color x:Key="Colors.White"       >#FFFFFF</Color>
  <Color x:Key="Colors.Black"       >#000000</Color>
  <SolidColorBrush x:Key="ColorTransparent" Color="{StaticResource Colors.Transparent}"/>
  <SolidColorBrush x:Key="ColorWhite"       Color="{StaticResource Colors.White}"/>
  <SolidColorBrush x:Key="ColorBlack"       Color="{StaticResource Colors.Black}"/>

  <!-- ################################################################### -->
  <!-- foreground (기본 글자색)                                             -->
  <!-- ################################################################### -->
  <Color x:Key="Colors.Foreground.Header"   >#EEEEEE</Color>
  <Color x:Key="Colors.Foreground.Header.Light"   >#EEEEEE</Color>
  <Color x:Key="Colors.Foreground"          >#EEEEEE</Color>
  <Color x:Key="Colors.Foreground.Light"    >#CCCCCC</Color>
  <Color x:Key="Colors.Foreground.MouseOver">#BBBBBB</Color>
  <Color x:Key="Colors.Foreground.Focus"    >#BBBBBB</Color>
  <Color x:Key="Colors.Foreground.Selected" >#88EEEEEE</Color>
  <Color x:Key="Colors.Foreground.Selected.Inactive" >#88EEEEEE</Color>
  <Color x:Key="Colors.Foreground.Disabled" >#888888</Color>
  <Color x:Key="Colors.Foreground.Error"    >#88EEEEEE</Color>
  <Color x:Key="Colors.Foreground.Modified" >#88EEEEEE</Color>
  <Color x:Key="Colors.Foreground.Selection">#88EEEEEE</Color>

  <SolidColorBrush x:Key="Element.Foreground.Header"    Color="{StaticResource Colors.Foreground.Header}"/>
  <SolidColorBrush x:Key="Element.Foreground.Header.Light"    Color="{StaticResource Colors.Foreground.Header.Light}"/>
  <SolidColorBrush x:Key="Element.Foreground"           Color="{StaticResource Colors.Foreground}"/>
  <SolidColorBrush x:Key="Element.Foreground.Light"     Color="{StaticResource Colors.Foreground.Light}"/>
  <SolidColorBrush x:Key="Element.Foreground.MouseOver" Color="{StaticResource Colors.Foreground.MouseOver}"/>
  <SolidColorBrush x:Key="Element.Foreground.Focus"     Color="{StaticResource Colors.Foreground.Focus}"/>
  <SolidColorBrush x:Key="Element.Foreground.Selected"  Color="{StaticResource Colors.Foreground.Selected}"/>
  <SolidColorBrush x:Key="Element.Foreground.Selected.Inactive"  Color="{StaticResource Colors.Foreground.Selected.Inactive}"/>
  <SolidColorBrush x:Key="Element.Foreground.Disabled"  Color="{StaticResource Colors.Foreground.Disabled}"/>
  <SolidColorBrush x:Key="Element.Foreground.Error"     Color="{StaticResource Colors.Foreground.Light}"/>
  <SolidColorBrush x:Key="Element.Foreground.Modified"  Color="{StaticResource Colors.Foreground.MouseOver}"/>
  <SolidColorBrush x:Key="Element.Foreground.Selection" Color="{StaticResource Colors.Foreground.Disabled}"/>

  <!-- ################################################################### -->
  <!-- Background (기본 배경색)                                             -->
  <!-- ################################################################### -->
  <Color x:Key="Colors.Background.Header"      >#30353A</Color>
  <Color x:Key="Colors.Background.Header.Light">#30353A</Color>
  <Color x:Key="Colors.Background"             >#30353A</Color>
  <Color x:Key="Colors.Background.Light"    >#30353A</Color>
  <Color x:Key="Colors.Background.MouseOver">#555555</Color>
  <Color x:Key="Colors.Background.Focus">#555555</Color>
  <Color x:Key="Colors.Background.Selected" >#555555</Color>
  <Color x:Key="Colors.Background.Selected.Inactive" >#555555</Color>
  <Color x:Key="Colors.Background.Disabled" >#CCCCCC</Color>
  <Color x:Key="Colors.Background.Error"    >#555555</Color>
  <Color x:Key="Colors.Background.Modified" >#555555</Color>
  <Color x:Key="Colors.Background.Selection">#CCCCCC</Color>

  <SolidColorBrush x:Key="Element.Background.Header"    Color="{StaticResource Colors.Background.Header}"/>
  <SolidColorBrush x:Key="Element.Background"           Color="{StaticResource Colors.Background}"/>
  <SolidColorBrush x:Key="Element.Background.Light"     Color="{StaticResource Colors.Background.Light}"/>
  <SolidColorBrush x:Key="Element.Background.MouseOver" Color="{StaticResource Colors.Background.MouseOver}"/>
  <SolidColorBrush x:Key="Element.Background.Focus" Color="{StaticResource Colors.Background.Focus}"/>
  <SolidColorBrush x:Key="Element.Background.Selected"  Color="{StaticResource Colors.Background.Selected}"/>
  <SolidColorBrush x:Key="Element.Background.Selected.Inactive"  Color="{StaticResource Colors.Background.Selected.Inactive}"/>
  <SolidColorBrush x:Key="Element.Background.Disabled"  Color="{StaticResource Colors.Background.Disabled}"/>
  <SolidColorBrush x:Key="Element.Background.Error"     Color="{StaticResource Colors.Background.MouseOver}"/>
  <SolidColorBrush x:Key="Element.Background.Modified"  Color="{StaticResource Colors.Background.Selected}"/>
  <SolidColorBrush x:Key="Element.Background.Selection" Color="{StaticResource Colors.Background.Disabled}"/>

  <!-- ################################################################### -->
  <!-- Border                                                              -->
  <!-- ################################################################### -->
  <Color x:Key="Colors.Border.Line" >#1A1A1A</Color>
  <SolidColorBrush x:Key="Border.Background"  Color="{StaticResource Colors.Transparent}"/>

  <SolidColorBrush x:Key="Border.Brush" Color="{StaticResource Colors.Border.Line}"/>
  <SolidColorBrush x:Key="Border.Brush.Selected"    Color="{StaticResource Colors.Foreground.Selected}"/>
  <SolidColorBrush x:Key="Border.Brush.MouseOver"   Color="{StaticResource Colors.Foreground.MouseOver}"/>
  <SolidColorBrush x:Key="Border.Brush.Focus"   Color="{StaticResource Colors.Foreground.MouseOver}"/>
  <SolidColorBrush x:Key="Border.Brush.Disabled"    Color="{StaticResource Colors.Foreground.Disabled}"/>

  <Thickness  x:Key="Border.Thickness"  Left="0" Right="1" Top="0" Bottom="1" />
  <Thickness  x:Key="Border.Padding"    Left="2" Right="2" Top="2" Bottom="2" />
  <Thickness  x:Key="Border.Margin"     Left="2" Right="2" Top="2" Bottom="2" />

  <!-- ################################################################### -->
  <!-- Header (윈도우 Titlebar, List/DataGrid의 Header 등)                  -->
  <!-- ################################################################### -->



  <!-- ################################################################### -->
  <!-- ItemsControl                                                        -->
  <!-- ################################################################### -->
  <sys:Double      x:Key="Items.Header.Height">35</sys:Double>
  <sys:Double      x:Key="Items.Header.FontSize">14</sys:Double>

  <SolidColorBrush x:Key="Items.Header.Foreground"           Color="{StaticResource Colors.Foreground.Header}"/>
  <SolidColorBrush x:Key="Items.Header.Background"           Color="{StaticResource Colors.Background.Header}"/>
  <SolidColorBrush x:Key="Items.Header.Background.MouseOver" Color="{StaticResource Colors.Background.MouseOver}"/>
  <SolidColorBrush x:Key="Items.Header.Background.Selected"  Color="{StaticResource Colors.Background.Selected}"/>

  <SolidColorBrush x:Key="Items.Foreground"           Color="{StaticResource Colors.Foreground}"/>
  <SolidColorBrush x:Key="Items.Foreground.MouseOver" Color="{StaticResource Colors.Foreground.MouseOver}"/>
  <SolidColorBrush x:Key="Items.Foreground.Modified"  Color="{StaticResource Colors.Foreground.Modified}"/>
  <SolidColorBrush x:Key="Items.Foreground.Error"     Color="{StaticResource Colors.Foreground.Error}"/>
  <SolidColorBrush x:Key="Items.Foreground.Selected"  Color="{StaticResource Colors.Foreground.Selected}"/>
  <SolidColorBrush x:Key="Items.Foreground.Inactive"  Color="{StaticResource Colors.Foreground.Selected.Inactive}"/>
  <SolidColorBrush x:Key="Items.Background"           Color="{StaticResource Colors.Background}"/>
  <SolidColorBrush x:Key="Items.Background.MouseOver" Color="LightYellow"/>
  <SolidColorBrush x:Key="Items.Background.Modified"  Color="{StaticResource Colors.Background.Modified}"/>
  <SolidColorBrush x:Key="Items.Background.Error"     Color="{StaticResource Colors.Background.Error}"/>
  <SolidColorBrush x:Key="Items.Background.Selected"  Color="#26A0DA"/>
  <SolidColorBrush x:Key="Items.Background.Inactive"  Color="{StaticResource Colors.Background.Selected.Inactive}"/>
  <SolidColorBrush x:Key="Items.Background.Alter0"    Color="#151515"/>
  <SolidColorBrush x:Key="Items.Background.Alter1"    Color="{StaticResource Colors.Background}"/>


  <!-- ################################################################### -->
  <!-- Button                                                        -->
  <!-- ################################################################### -->
  <SolidColorBrush x:Key="Button.Background.OK"       Color="#43A047"/>
  <SolidColorBrush x:Key="Button.Background.Close"    Color="#455A64"/>
  <SolidColorBrush x:Key="Button.Background.Cancel"   Color="#455A64"/>
  <SolidColorBrush x:Key="Button.Background.Remove"   Color="#DC143C"/>
  <Thickness       x:Key="Button.Margin" Left="10" Right="10" Top="10" Bottom="10" />
  <sys:Double      x:Key="Button.FontSize">13</sys:Double>
  <sys:Double      x:Key="Button.Height">28</sys:Double>
  <sys:Double      x:Key="Button.Width">80</sys:Double>

  <!-- ################################################################### -->
  <!-- CheckBox                                                            -->
  <!-- ################################################################### -->
  <Thickness       x:Key="CheckBox.Margin" Left="0" Right="0" Top="0" Bottom="0" />
  <sys:Double      x:Key="CheckBox.FontSize">13</sys:Double>
  <sys:Double      x:Key="CheckBox.Height">28</sys:Double>
  <sys:Double      x:Key="CheckBox.Width">80</sys:Double>

  <!-- ################################################################### -->
  <!--                                                             -->
  <!-- ################################################################### -->
  <Thickness       x:Key="ComboBox.Margin" Left="0" Right="0" Top="0" Bottom="0" />
  <sys:Double      x:Key="ComboBox.FontSize">13</sys:Double>
  <sys:Double      x:Key="ComboBox.Height">28</sys:Double>
  <sys:Double      x:Key="ComboBox.Width">80</sys:Double>

  <!-- ################################################################### -->
  <!-- TreeView                                                        -->
  <!-- ################################################################### -->
  <SolidColorBrush x:Key="TreeView.Background"      Color="{StaticResource Colors.Background}"/>
  <SolidColorBrush x:Key="TreeView.Foreground"      Color="{StaticResource Colors.Foreground}"/>
  <SolidColorBrush x:Key="TreeViewItem.Background"  Color="{StaticResource Colors.Background}"/>
  <SolidColorBrush x:Key="TreeViewItem.Foreground"  Color="{StaticResource Colors.Foreground}"/>
</ResourceDictionary>