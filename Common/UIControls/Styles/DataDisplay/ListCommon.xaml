<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <sys:Double      x:Key="ListBox_Header_Height">34</sys:Double>
  <sys:Double      x:Key="ListBox_Header_FontSize">14</sys:Double>

  <SolidColorBrush x:Key="ListBox_Header_Foreground"           Color="#EEEEEE"/>
  <SolidColorBrush x:Key="ListBox_Header_Background"           Color="#404850"/>
  <SolidColorBrush x:Key="ListBox_Header_Background.MouseOver" Color="#30353A"/>
  <SolidColorBrush x:Key="ListBox_Header_Background.Selected"  Color="#30353A"/>

  <SolidColorBrush x:Key="ListBox_Foreground"           Color="#EEEEEE"/>
  <SolidColorBrush x:Key="ListBox_Foreground.Disabled"  Color="#888888"/>
  <SolidColorBrush x:Key="ListBox_Foreground.MouseOver" Color="#BBBBBB"/>
  <SolidColorBrush x:Key="ListBox_Foreground.Edited"  Color="#88EEEEEE"/>
  <SolidColorBrush x:Key="ListBox_Foreground.Error"     Color="#88EEEEEE"/>
  <SolidColorBrush x:Key="ListBox_Foreground.Selected"  Color="#88EEEEEE"/>
  <SolidColorBrush x:Key="ListBox_Foreground.Inactive"  Color="#88EEEEEE"/>

  <SolidColorBrush x:Key="ListBox_Background"           Color="#495158"/>
  <SolidColorBrush x:Key="ListBox_Background.MouseOver" Color="#30353A"/>
  <SolidColorBrush x:Key="ListBox_Background.Edited"  Color="#555555"/>
  <SolidColorBrush x:Key="ListBox_Background.Error"     Color="#555555"/>
  <SolidColorBrush x:Key="ListBox_Background.Selected"  Color="#26A0DA"/>
  <SolidColorBrush x:Key="ListBox_Background.Inactive"  Color="#555555"/>
  <SolidColorBrush x:Key="ListBox_Background.Alter0"    Color="#151515"/>
  <SolidColorBrush x:Key="ListBox_Background.Alter1"    Color="#30353A"/>


  <SolidColorBrush x:Key="ListBox_BorderBrush" Color="#1A1A1A"/>
  <SolidColorBrush x:Key="ListBox_BorderBrush.Selected"    Color="#88EEEEEE"/>
  <SolidColorBrush x:Key="ListBox_BorderBrush.MouseOver"   Color="#BBBBBB"/>


</ResourceDictionary>