<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <sys:Double x:Key="TextBox_Height">30</sys:Double>
  <!--<sys:Double x:Key="TextBox_FontSize">15</sys:Double>-->
  <Thickness  x:Key="TextBox_BorderThickness" Left="1" Right="1" Top="1" Bottom="1" />
  <Thickness  x:Key="TextBox_Margin" Left="1" Right="1" Top="0" Bottom="0" />
  <CornerRadius x:Key="TextBox_CornerRadius" TopLeft="0" TopRight="0" BottomRight="0"  BottomLeft="0" />

  <!-- Normal -->
  <SolidColorBrush x:Key="TextBox_CaretBrush" Color="#EEEEEE"/>
  <SolidColorBrush x:Key="TextBox_Foreground" Color="#bdc4cf"/>
  <SolidColorBrush x:Key="TextBox_Background" Color="#30353A"/>
  <SolidColorBrush x:Key="TextBox_BorderBrush" Color="Transparent"/>
  <!-- Hover -->
  <SolidColorBrush x:Key="TextBox_Foreground.MouseOver" Color="White"/>
  <SolidColorBrush x:Key="TextBox_Background.MouseOver" Color="#30353A"/>
  <SolidColorBrush x:Key="TextBox_BorderBrush.MouseOver" Color="#5b636b"/>
  <!-- focus -->
  <SolidColorBrush x:Key="TextBox_Foreground.Focused" Color="White"/>
  <!--<SolidColorBrush x:Key="TextBox_Background.Focused" Color="#23272b"/>-->
  <SolidColorBrush x:Key="TextBox_Background.Focused" Color="#222222"/>
  <SolidColorBrush x:Key="TextBox_BorderBrush.Focused" Color="#5b636b"/>
  <!-- Disalbed -->
  <SolidColorBrush x:Key="TextBox_Foreground.Disabled" Color="#2D1719"/>
  <SolidColorBrush x:Key="TextBox_Background.Disabled" Color="#A4A6A8"/>
  <SolidColorBrush x:Key="TextBox_BorderBrush.Disabled" Color="#AAA"/>

  <!-- ################################################################### -->
  <!-- Default TextBox Style                                                -->
  <!-- ################################################################### -->
  <Style x:Key="DefaultTextBoxStyle" TargetType="{x:Type TextBoxBase}">
    <!-- Wrap 등을 위해서 높이 설정은 하지 말것 -->
    <!--<Setter Property="Height" Value="{StaticResource TextBox_Height}" />-->
    <Setter Property="Margin" Value="{StaticResource TextBox_Margin}"/>
    <Setter Property="Foreground" Value="{StaticResource TextBox_Foreground}"/>
    <Setter Property="Background" Value="{StaticResource TextBox_Background}"/>
    <Setter Property="CaretBrush" Value="{StaticResource TextBox_CaretBrush}" />
    <Setter Property="BorderBrush" Value="{StaticResource TextBox_BorderBrush}" />
    <Setter Property="BorderThickness" Value="{StaticResource TextBox_BorderThickness}"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="HorizontalAlignment" Value="Stretch"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
    <Setter Property="ToolTipService.IsEnabled" Value="False" />
  </Style>

</ResourceDictionary>