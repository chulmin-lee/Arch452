<UserControl x:Class="UIControls.MarqueeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UIControls"
             mc:Ignorable="d"
             DataContext="{Binding}"
             x:Name="uc"
             d:DesignHeight="450" d:DesignWidth="800">

  <Canvas ClipToBounds="True" x:Name="out_canvas">
    <Label x:Name="Caption"
           Content="{Binding ElementName=uc, Path=Message}"
           Foreground="{Binding ElementName=uc, Path=Foreground}"
           FontSize="{Binding ElementName=uc, Path=FontSize}"
           FontWeight="{Binding ElementName=uc, Path=FontWeight}"
           Height="{Binding ElementName=out_canvas, Path=ActualHeight}"
           VerticalContentAlignment="Center" />
  </Canvas>
</UserControl>