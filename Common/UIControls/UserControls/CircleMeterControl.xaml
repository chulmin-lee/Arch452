<UserControl x:Class="UIControls.CircleMeterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UIControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="50" />
      <RowDefinition Height="40" />
    </Grid.RowDefinitions>

    <local:CircleMeter Grid.Row="0" x:Name="circleMeter" Width="130" Height="130" />
    <TextBlock Grid.Row="1" x:Name="tbTitle" Text="응급환자" FontSize="25" FontWeight="Bold" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" />
    <TextBlock Grid.Row="2" Text="평균대기시간" FontSize="25" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" />

  </Grid>
</UserControl>
