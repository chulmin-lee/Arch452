<UserControl x:Class="UIControls.MediaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UIControls"
             mc:Ignorable="d"
             x:Name="mc"
             d:DesignHeight="450" d:DesignWidth="800">

  <Grid x:Name="MainGrid" Background="Black">
    <Image x:Name="myImage" Stretch="Fill" />
    <MediaElement x:Name="myMedia" HorizontalAlignment="Center"
                  Stretch="Uniform"
                  Volume="{Binding ElementName=mc, Path=MediaVolumn}"
                  ClipToBounds="False"
                  LoadedBehavior="Manual"
                  UnloadedBehavior="Close" />
  </Grid>
</UserControl>