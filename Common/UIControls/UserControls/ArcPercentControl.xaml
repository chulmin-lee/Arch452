<UserControl x:Class="UIControls.ArcPercentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UIControls"
             mc:Ignorable="d"
             x:Name="uc"
             d:DesignHeight="160" d:DesignWidth="320">
  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
  </UserControl.Resources>

  <Grid Background="Transparent" Width="320" Height="160">
    <local:ArcMeter Fill="#D0D5DD"  Width="320" Height="160" WedgeAngle="180" />
    <local:ArcMeter Fill="DarkRed"  Width="320" Height="160" WedgeAngle="180"
                      Visibility="{Binding ElementName=uc, Path=Arc180, Converter={StaticResource BooleanToVisibilityConverter}}" />
    <local:ArcMeter Fill="#B32318"  Width="320" Height="160" WedgeAngle="135"
                      Visibility="{Binding ElementName=uc, Path=Arc135, Converter={StaticResource BooleanToVisibilityConverter}}" />
    <local:ArcMeter Fill="#D92D20"  Width="320" Height="160" WedgeAngle="90"
                      Visibility="{Binding ElementName=uc, Path=Arc90, Converter={StaticResource BooleanToVisibilityConverter}}" />
    <local:ArcMeter Fill="#F92E20"  Width="320" Height="160" WedgeAngle="45"
                      Visibility="{Binding ElementName=uc, Path=Arc45, Converter={StaticResource BooleanToVisibilityConverter}}" />
  </Grid>
</UserControl>