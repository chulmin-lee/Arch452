<UserControl x:Class="UIControls.ArcMeterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UIControls"
             mc:Ignorable="d"
             DataContext="{Binding}"
             x:Name="uc"
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="3*" />
      <RowDefinition Height="10" />
      <RowDefinition Height="7*" />
    </Grid.RowDefinitions>

    <Grid Grid.Row="0">
      <Grid.RowDefinitions>
        <RowDefinition Height="2*" />
        <RowDefinition Height="1*" />
      </Grid.RowDefinitions>

      <Grid Grid.Row="0">
        <local:ArcMeter Fill="#D0D5DD"  Width="320" Height="160" WedgeAngle="180" />
        <local:ArcMeter Fill="DarkRed"  Width="320" Height="160" WedgeAngle="180"
                      Visibility="{Binding ElementName=uc, Path=VM.Arc180, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <local:ArcMeter Fill="#B32318"  Width="320" Height="160" WedgeAngle="135"
                      Visibility="{Binding ElementName=uc, Path=VM.Arc135, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <local:ArcMeter Fill="#D92D20"  Width="320" Height="160" WedgeAngle="90"
                      Visibility="{Binding ElementName=uc, Path=VM.Arc90, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <local:ArcMeter Fill="#F92E20"  Width="320" Height="160" WedgeAngle="45"
                      Visibility="{Binding ElementName=uc, Path=VM.Arc45, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
          <TextBlock Text="{Binding ElementName=uc, Path=VM.TotalInBed}" FontSize="34" FontWeight="Bold" Foreground="Red" />
          <TextBlock Text="명" FontSize="22" FontWeight="Bold" Foreground="Black"  VerticalAlignment="Center" Margin="10,0,0,0" />
        </StackPanel>
      </Grid>
      <Border Grid.Row="1" VerticalAlignment="Center">
        <TextBlock Text="{Binding ElementName=uc, Path=VM.TotalCongestionName}"
                   Style="{StaticResource CommonTextBlock}" FontSize="36" />
      </Border>
    </Grid>

    <ItemsControl Grid.Row="2" ItemsSource="{Binding ElementName=uc, Path=VM.Items}" Margin="10,0,10,0">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <UniformGrid Columns="1" Rows="{Binding ElementName=uc, Path=Rows}" />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="1*" />
              <!--<RowDefinition Height="10" />
              <RowDefinition Height="2*" />
              <RowDefinition Height="10" />-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="50" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label  Grid.Column="0" Content="⬤">
              <Label.Style>
                <Style TargetType="Label" BasedOn="{StaticResource CommonLabel}">
                  <Setter Property="FontSize" Value="30" />
                  <Style.Triggers>
                    <DataTrigger Binding="{Binding AreaCode}" Value="1">
                      <Setter Property="Foreground" Value="#ED2B1A" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding AreaCode}" Value="2">
                      <Setter Property="Foreground" Value="#FFDF28" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding AreaCode}" Value="46">
                      <Setter Property="Foreground" Value="#019C13" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding AreaCode}" Value="47">
                      <Setter Property="Foreground" Value="#1825AF" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding AreaCode}" Value="48">
                      <Setter Property="Foreground" Value="Green" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding AreaCode}" Value="49">
                      <Setter Property="Foreground" Value="LightGreen" />
                    </DataTrigger>
                  </Style.Triggers>
                </Style>
              </Label.Style>
            </Label>

