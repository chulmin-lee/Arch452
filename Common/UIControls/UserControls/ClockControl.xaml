<UserControl x:Class="UIControls.ClockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UIControls"
             mc:Ignorable="d"
             DataContext="{Binding}"
             x:Name="uc"
             d:DesignHeight="450" d:DesignWidth="800">
  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BoolToVisible" />
  </UserControl.Resources>

  <Grid>
    <StackPanel x:Name="StackPanel" VerticalAlignment="Center" Margin="0,0,30,0">
      <StackPanel.Style>
        <Style TargetType="{x:Type StackPanel}">
          <Setter Property="Orientation" Value="Vertical" />
          <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=uc, Path=MultiLine}" Value="false">
              <Setter Property="Orientation" Value="Horizontal" />
            </DataTrigger>
          </Style.Triggers>
        </Style>
      </StackPanel.Style>

      <TextBlock x:Name="Date"
                 Visibility="{Binding ElementName=uc, Path=ClockSetting.ShowDate, Converter={StaticResource BoolToVisible}}"
                 Foreground="{Binding ElementName=uc, Path=DateFontColor}"
                 FontSize="{Binding ElementName=uc, Path=DateFontSize}" HorizontalAlignment="Right" />
      <Border Width="30" Height="1" />
      <TextBlock x:Name="Time"
                 Visibility="{Binding ElementName=uc, Path=ClockSetting.ShowTime, Converter={StaticResource BoolToVisible}}"
                 Foreground="{Binding ElementName=uc, Path=TimeFontColor}"
                 FontSize="{Binding ElementName=uc, Path=TimeFontSize}" HorizontalAlignment="Right" />
    </StackPanel>
  </Grid>
</UserControl>