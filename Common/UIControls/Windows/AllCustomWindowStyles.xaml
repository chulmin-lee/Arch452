<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:UIControls">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="pack://application:,,,/UIControls;component/Windows/Styles/CustomWindow.xaml"/>
    <ResourceDictionary Source="pack://application:,,,/UIControls;component/Windows/Styles/PopupWindow.xaml"/>
    <ResourceDictionary Source="pack://application:,,,/UIControls;component/Windows/Styles/SplashWindow.xaml"/>
    <ResourceDictionary Source="pack://application:,,,/UIControls;component/Windows/Styles/DialogWindow.xaml"/>
    <ResourceDictionary Source="pack://application:,,,/UIControls;component/Windows/Styles/ProcessDialogWindow.xaml"/>
  </ResourceDictionary.MergedDictionaries>

  <!-- generic을 사용하지 않는 경우에 사용한다. -->

  <Style TargetType="{x:Type local:CustomWindow}" x:Key="CustomWindowStyle" />
  <Style TargetType="{x:Type local:CustomPopupWindow}"  x:Key="CustomPopupStyle" />
  <Style TargetType="{x:Type local:CustomSplashWindow}"  x:Key="CustomSplashStyle" />
  <Style TargetType="{x:Type local:CustomDialogWindow}"  x:Key="CustomDialogStyle" />
  <Style TargetType="{x:Type local:ProcessDialogWindow}"  x:Key="ProcessDialogStyle" />


</ResourceDictionary>