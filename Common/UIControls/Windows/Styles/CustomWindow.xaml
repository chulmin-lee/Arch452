<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:UIControls">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="pack://application:,,,/UIControls;component/Windows/Styles/WindowCommon.xaml"/>
    <ResourceDictionary Source="pack://application:,,,/UIControls;component/Windows/Styles/WindowButton.xaml"/>
  </ResourceDictionary.MergedDictionaries>

  <!-- CustomWindow                 -->
  <!-- 메뉴 : Menu, ContextMenu     -->
  <!-- 버튼 : Min/Max/Restore/Close -->
  <!-- 타이틀 : 가운데 정렬          -->

  <Style TargetType="{x:Type local:CustomWindow}" BasedOn="{StaticResource BaseWindowStyle}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:CustomWindow}">
          <Grid Background="Transparent" x:Name="WindowRoot">
            <!-- window 전체를 둘러싸는 테두리 -->
            <Border x:Name="WindowOutBorder"
                  Background="{StaticResource OutBorder_Background}"
                  BorderThickness="{StaticResource OutBorder_BorderThickness}"
                  BorderBrush="{StaticResource OutBorder_BorderBrush.Active}"
                  CornerRadius="{StaticResource OutBorder_CornerRadius}">

              <Grid x:Name="LayoutRoot">
                <Grid.RowDefinitions>
                  <RowDefinition Height="{Binding Source={StaticResource TitleBar_Height}}"/>
                  <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Caption -->
                <Grid x:Name="PART_TitleBar" Background="Transparent">
                  <Border Background="{StaticResource TitleBar_Background}"
                        BorderThickness="{StaticResource TitleBar_BorderThickness}"
                        CornerRadius="{StaticResource TitleBar_CornerRadius}">
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                      </Grid.ColumnDefinitions>

                      <!-- 0. App icon -->
                      <Grid Grid.Column="0">
                        <Image Source="{TemplateBinding Icon}" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"
                         Width="{Binding Source={StaticResource WindowIcon_Width}}"
                         Height="{Binding Source={StaticResource WindowIcon_Height}}" />
                      </Grid>

                      <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Menu x:Name="MainMenu" IsMainMenu="True" Style="{StaticResource Style.Menu.Base}"
                            Visibility="Collapsed" />
                      </StackPanel>

                      <!-- 2. title (column span) -->
                      <Border Grid.Column="0" Grid.ColumnSpan="5" BorderBrush="{x:Null}" HorizontalAlignment="Center">
                        <TextBlock x:Name="PART_Title" IsHitTestVisible="False"
                                 Foreground="{StaticResource TitleBar_Foreground}"
                                 FontSize="{Binding Source={StaticResource TitleBar_FontSize}}"
                                 Text="{TemplateBinding Title}"
                                 HorizontalAlignment="Center"  VerticalAlignment="Center"  TextAlignment="Center"
                                 TextTrimming="CharacterEllipsis"
                                 Width="Auto" Panel.ZIndex="0" />
                      </Border>

                      <!-- 3. context menu & main menu -->
                      <StackPanel Grid.Column="3" Orientation="Horizontal">
                        <Button x:Name="ContextMenuButton" Style="{StaticResource WindowButtonStyle}" Visibility="Collapsed">
                          <Button.ContextMenu>
                            <ContextMenu Style="{StaticResource Style.ContextMenu.Base}"/>
                          </Button.ContextMenu>
                          <Path Style="{StaticResource WindowButton_Horizon}" />
                        </Button>
                      </StackPanel>

                      <!-- 4. buttons -->
                      <Grid x:Name="ButtonsArea" Grid.Column="4" Background="Transparent">
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="36"/>
                          <ColumnDefinition Width="36"/>
                          <ColumnDefinition Width="36"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="MinimizeButton" Style="{StaticResource WindowButtonStyle}" Grid.Column="0"
                                VerticalContentAlignment="Bottom">
                          <Path Style="{StaticResource WindowButton_Minimize}" />
                        </Button>

                        <Button x:Name="MaximizeButton" Style="{StaticResource WindowButtonStyle}" Grid.Column="1">
                          <Path Style="{StaticResource WindowButton_Maximize}" />
                        </Button>
                        <Button x:Name="RestoreButton" Style="{StaticResource WindowButtonStyle}" Grid.Column="1">
                          <Path Style="{StaticResource WindowButton_Restore}" />
                        </Button>

                        <Button x:Name="CloseButton" Style="{StaticResource WindowButtonStyle}" Grid.Column="2">
                          <Path Style="{StaticResource WindowButton_Close}" />
                        </Button>
                      </Grid>
                    </Grid>
                  </Border>
                </Grid>

                <!-- 1. seperator -->
                <!--<Rectangle Grid.Row="1" Height="1" Fill="{StaticResource Seperator_Background}"/>-->

                <!-- 2. Client content -->
                <Border Grid.Row="1"
                      Background="{StaticResource Client_Background}"
                      BorderThickness="{StaticResource Client_BorderThickness}"
                      CornerRadius="{StaticResource Client_CornerRadius}">
                  <Grid Panel.ZIndex="10" Margin="3,0,3,3">
                    <AdornerDecorator>
                      <ContentPresenter x:Name="PART_MainContentPresenter"/>
                    </AdornerDecorator>
                  </Grid>
                </Border>
              </Grid>
            </Border>
          </Grid>

          <ControlTemplate.Triggers>
            <Trigger Property="WindowState" Value="Maximized">
              <Setter TargetName="MaximizeButton" Property="Visibility" Value="Collapsed" />
              <Setter TargetName="RestoreButton" Property="Visibility" Value="Visible" />
              <Setter TargetName="WindowOutBorder" Property="Margin" Value="8" />
            </Trigger>
            <Trigger Property="WindowState" Value="Normal">
              <Setter TargetName="MaximizeButton" Property="Visibility" Value="Visible" />
              <Setter TargetName="RestoreButton" Property="Visibility" Value="Collapsed" />
            </Trigger>

            <Trigger Property="IsActive" Value="false ">
              <Setter TargetName="WindowOutBorder" Property="BorderBrush" Value="{StaticResource OutBorder_BorderBrush.Inactive}" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>